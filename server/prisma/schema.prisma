// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @unique @default(uuid())

  login        String  @unique
  email        String  @unique
  passwordHash String

  session String? @unique

  name    String?
  surname String?

  chats Chat[]
  messages Message[]

  imageID String?
  image Image? @relation(fields: [imageID],references: [id])
  
}

model Chat {
  id String @id @unique @default(uuid())

  users User[]

  lastMessage Message? @relation("ChatOnMessage",fields: [lastMessageID],references: [id])
  lastMessageID String?
}


model Message{
  id String @id @unique @default(uuid())

  text String
  createAt DateTime @default(now())


  user User @relation( fields: [userID],references: [id])
  userID String


  onChat Chat[] @relation("ChatOnMessage")

  nextMessage Message[] @relation("MessageRef")
  prevMessage Message? @relation("MessageRef", fields: [prevMessageID],references: [id])
  prevMessageID String?
}



model Image{
  id String @id @unique @default(uuid())

  createAt DateTime @default(now())

  originalname String?
  mimetype String?
  buffer Bytes?
  size Int

  user User[]
}