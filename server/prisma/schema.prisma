// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id Int @id @default(autoincrement())
  pubid String @unique @default(uuid())

  login        String  @unique
  email        String  @unique
  passwordHash String

  token        String?

  name    String?
  surname String?

  chats Chat[]
}

model Chat {
  id Int @id @default(autoincrement())

  nameChat String

  users User[]


  lastMessage Message? @relation("ChatOnMessage",fields: [lastMessageID],references: [id])
  lastMessageID Int?
}


model Message{
  id Int @id @default(autoincrement()) @unique

  text String
  createAt DateTime @default(now())

  onChat Chat[] @relation("ChatOnMessage")

  nextMessage Message[] @relation("MessageRef")
  prevMessage Message? @relation("MessageRef", fields: [prevMessageID],references: [id])
  prevMessageID Int?
}
