generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  login        String  @unique
  email        String  @unique
  passwordHash String

  token        String?

  name    String?
  surname String?


  chats Chat[]

  // chatsID Int[] 
}



model Chat {
  id Int @id @default(autoincrement())

  nameChat String

  // userId Int    @unique
  // user   User   @relation(fields: [userId], references: [id])

  users User[]

  @@map("chats")
}
